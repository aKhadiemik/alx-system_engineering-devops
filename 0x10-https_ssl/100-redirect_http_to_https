global
        log /dev/log    local0
	stats socket /run/haproxy/admin.sock mode 660 level admin

defaults
        log     global
        mode    http
        option  httplog
	timeout connect  10s
	timeout client  30s
	timeout server  30s

frontend mybletchley-frontend
	bind *:80
	bind *:443 ssl crt /etc/haproxy/certs/{cert_name}.pem
	http-request redirect scheme https code 301 unless { ssl_fc }
	http-request set-header X-Forwarded-Proto https
	default_backend th3gr00t-tech-backend

backend mybletchley-backend
	balance roundrobin
	server 270490-web-01 100.26.255.173:80 check
	server 270490-web-02 54.82.222.195:80 check
